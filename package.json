{
  "name": "typescript-start-server",
  "version": "0.0.1",
  "description": "typescript-starter-server",
  "author": "Mitch Crowe <crowe.mitch@gmail.com> (http://www.mitchcrowe.com)",
  "license": "ISC",
  "engines": {
    "node": "6.4.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "start": "node -r dotenv/config -r @mcrowe/env-check dist/index.js",
    "test": "mocha -u qunit --recursive -r ts-node/register -r dotenv/config -r @mcrowe/env-check 'test/**/*.ts'",
    "build": "tsc && cp -rf src/views dist",
    "watch": "nodemon --watch src --watch .env -e ts --exec 'npm run start-ts'",
    "start-ts": "ts-node -r dotenv/config -r @mcrowe/env-check src/index.ts",
    "console": "ts-repl -r dotenv/config -r @mcrowe/env-check"
  },
  "dependencies": {
    "@mcrowe/env-check": "0.0.3",
    "@mcrowe/safe-async-express-errors": "0.0.3",
    "@mcrowe/sql-builder": "0.0.1",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^2.0.0",
    "ejs": "^2.5.2",
    "express": "^4.14.0",
    "lodash": "^4.17.4",
    "morgan": "^1.7.0",
    "pg-promise": "^5.3.3"
  },
  "devDependencies": {
    "@mcrowe/ts-repl": "0.0.4",
    "@types/core-js": "^0.9.41",
    "@types/express": "^4.0.35",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.12",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "ts-node": "^3.0.2",
    "typescript": "^2.2.2"
  },
  "env": {
    "required": {
      "PORT": "Port to listen on",
      "DATABASE_URL": "Database URL for Postgres"
    }
  }
}
