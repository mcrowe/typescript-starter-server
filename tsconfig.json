{
  "compileOnSave": true,
  "allowJS": false,
  "compilerOptions": {
    "watch": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true
  },
  "include": [
    "src/**/*"
  ]
}